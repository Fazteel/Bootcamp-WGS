<%- include('layout/header') %>
<%- include('layout/nav') %>
<!-- Main Content -->
    <div class="flex flex-col items-center mt-20 w-full max-w-screen-lg px-4">
        <h1 class="text-2xl text-gray-700 mb-4">Contact Us</h1>

        <div class="relative overflow-x-auto w-full">
            <table class="w-full max-w-full text-sm text-center text-gray-500 dark:text-gray-400 border-collapse mb-10">
                <thead class="text-xs text-gray-700 uppercase bg-gray-800 dark:bg-gray-700 text-white dark:text-gray-400">
                    <tr>
                        <th scope="col" class="px-6 py-3 border-b border-gray-300 dark:border-gray-600">
                            Name
                        </th>
                        <th scope="col" class="px-6 py-3 border-b border-gray-300 dark:border-gray-600">
                            Email
                        </th>
                        <th scope="col" class="px-6 py-3 border-b border-gray-300 dark:border-gray-600">
                            Phone
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <% contact.forEach(contact => { %>
                        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                            <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white border-b border-gray-300 dark:border-gray-600">
                                <%= contact.name %>
                            </th>
                            <td class="px-6 py-4 border-b border-gray-300 dark:border-gray-600">
                                <%= contact.email %>
                            </td>
                            <td class="px-6 py-4 border-b border-gray-300 dark:border-gray-600">
                                <%= contact.mobile %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Tailwind Animation -->
    <style>
        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }
        .animate-fadeIn {
            animation: fadeIn 1s ease-in-out;
        }
    </style>
<%- include('layout/footer') %>